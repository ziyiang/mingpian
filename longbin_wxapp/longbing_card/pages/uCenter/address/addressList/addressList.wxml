<view class="address-list-sec">
    <view class="address-list" wx:for="{{dataList}}" wx:key="key">
        <view bindtap="toJump" class="address-userinfo flex" data-index="{{index}}" data-status="toCheckAddr">
            <view class="flex100-6 ellipsis">{{item.name}}<text wx:if="{{item.sex}}">{{item.sex}}</text>
            </view>
            <view class="flex100-4 ellipsis tr">{{tmpPhone[index]}}</view>
        </view>
        <view bindtap="toJump" class="address ellipsis" data-index="{{index}}" data-status="toCheckAddr">{{item.address}}{{item.address_detail}}</view>
        <view class="address-btn flex">
            <view bindtap="toJump" class="flex100-4" data-index="{{index}}" data-status="toCheckDefaultAddr">
                <view class="{{idList[index]?'active':''}}">
                    <i class="iconfont {{idList[index]?'active icon-xuanze':'icon-xuanze-moren'}}"></i>{{idList[index]?'已设为默认地址':'默认地址'}}</view>
            </view>
            <view class="flex100-6">
                <view bindtap="toJump" class="fr" data-index="{{index}}" data-status="toDeleteAddr">
                    <i class="iconfont icon-shanchu-01"></i>删除</view>
                <view bindtap="toJump" class="fr mr-30" data-index="{{index}}" data-status="toEditAddr" data-url="/longbing_card/pages/uCenter/address/editAddress/editAddress?status=toEdit">
                    <i class="iconfont icon-fabuxuqiu"></i>编辑</view>
            </view>
        </view>
    </view>
</view>
<view style="height:100rpx;"></view>
<view class="add-address-fixed fix tc flex {{globalData.isIphoneX?'isIphoneX':''}}" style="background:white;">
    <view bindtap="toJump" class="flex100-5 manual" data-status="toAddAddr" data-url="/longbing_card/pages/uCenter/address/editAddress/editAddress?status=toAdd">
        <i class="iconfont icon-jia1 rel"></i>手动添加</view>
    <view bindtap="toJump" class="flex100-5 wechat" data-status="toWechatAddr">
        <i class="iconfont icon-weixin rel"></i>微信添加</view>
</view>
<view class="{{globalData.isIphoneX?'isIphoneX':''}}" style="height:100rpx;"></view>
