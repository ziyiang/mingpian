<import src="../../templates/copyright/copyright.wxml"></import>
<view class="uCenter-info-sec rel">
    <image class="abs circle" src="{{userData.avatarUrl?userData.avatarUrl:globalData.defaultUserImg}}"></image>
    <view class="name ellipsis" style="margin-top:45rpx;">{{userData.nickName}}</view>
</view>
<view bindtap="toJump" class="common-title-sec rel" data-status="toOrder" data-url="/longbing_card/pages/uCenter/order/orderList/orderList?currentTab=0">我的订单<view class="abs">全部订单<i class="iconfont icon-right2 rel"></i>
    </view>
</view>
<form bindsubmit="formSubmit" class="copany-nav-sec tc uCenter-order-sec clearfix" reportSubmit="true">
    <button class="fl flex100-2 tc" data-status="toOrder" data-url="/longbing_card/pages/uCenter/order/orderList/orderList?currentTab=1" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-fukuan"></i>
        </view>
        <view class="ellipsis">待付款</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toOrder" data-url="/longbing_card/pages/uCenter/order/orderList/orderList?currentTab=2" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-baoguofahuo"></i>
        </view>
        <view class="ellipsis">待发货</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toOrder" data-url="/longbing_card/pages/uCenter/order/orderList/orderList?currentTab=3" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-daishouhuo"></i>
        </view>
        <view class="ellipsis">待收货</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toOrder" data-url="/longbing_card/pages/uCenter/order/orderList/orderList?currentTab=4" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-dingdanwancheng"></i>
        </view>
        <view class="ellipsis">已完成</view>
    </button>
</form>
<view class="{{globalData.isIphoneX?'isIphoneX':''}}"></view>
<view bindtap="toJump" class="common-title-sec rel" data-status="toCollage" data-url="/longbing_card/pages/uCenter/order/collageList/collageList?currentTab=0">我的拼团<view class="abs">全部拼团<i class="iconfont icon-right2 rel"></i>
    </view>
</view>
<form bindsubmit="formSubmit" class="copany-nav-sec tc uCenter-order-sec uCenter-pin-sec clearfix" reportSubmit="true">
    <button class="fl flex100-2 tc" data-status="toCollage" data-url="/longbing_card/pages/uCenter/order/collageList/collageList?currentTab=0" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-gengduo"></i>
        </view>
        <view class="ellipsis">全部拼团</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toCollage" data-url="/longbing_card/pages/uCenter/order/collageList/collageList?currentTab=1" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-tuandui-tianchong"></i>
        </view>
        <view class="ellipsis">拼团中</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toCollage" data-url="/longbing_card/pages/uCenter/order/collageList/collageList?currentTab=2" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-shoujianchenggong"></i>
        </view>
        <view class="ellipsis">拼团成功</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toCollage" data-url="/longbing_card/pages/uCenter/order/collageList/collageList?currentTab=3" formType="submit" hoverClass="none">
        <view>
            <image src="/longbing_card/resource/images/icon_fail.png"></image>
        </view>
        <view class="ellipsis">拼团失败</view>
    </button>
</form>
<form bindsubmit="formSubmit" reportSubmit="true">
    <view class="uCenter-index-info-list-sec">
        <button class="child rel" data-status="toAddressList" data-url="/longbing_card/pages/uCenter/address/addressList/addressList" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-dizhi"></i>
            <view class="flex">
                <view class="flex100-5 tl">地址管理</view>
                <view class="flex100-5 tr">
                    <i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
    </view>
</form>
