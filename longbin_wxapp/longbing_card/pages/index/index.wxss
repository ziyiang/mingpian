page {
    background: #f4f4f8;
}

view,button {
    display: block;
    overflow: initial;
}

.animatoins {
    width: 94%;
    height: 118rpx;
    background: #fefefd;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 10rpx;
    left: 3%;
    z-index: 9999999;
    color: #000;
    font-size: 28rpx;
    transition: transform 1s;
    transform: translateY(-140rpx);
    box-shadow: 0 3rpx 12rpx rgba(0,0,0,.1);
}

.animatoins text {
    width: 500rpx;
    position: relative;
    top: -5rpx;
}

.aa {
    transform: translateY(0rpx);
}

.animatoins_top {
    display: flex;
    flex-direction: column;
    padding: 10rpx 0 0 0;
    flex: 1;
}

.animatoins_content {
    color: #666;
    font-size: 22rpx;
}

.animatoins image {
    width: 64rpx;
    height: 64rpx;
    padding: 0rpx 10rpx 0rpx 30rpx;
    margin: 0rpx;
}

.animatoins_top em {
    top: 27rpx;
    right: 5%;
}

.scroll-view-navTop-sec {
    height: 90rpx;
    line-height: 90rpx;
}

.scroll-item-de {
    height: 80rpx;
    line-height: 80rpx;
}










.card-list-sec .child {
    width: 680rpx;
    height: auto;
    display: block;
    margin: 0rpx auto;
}

.detail.card {
    width: 568rpx;
    height: 300rpx;
    padding: 50rpx 56rpx;
    background: white;
    color: #848791;
    overflow: hidden;
    margin:0 auto;
    margin-top:120rpx;
    margin-bottom:70rpx;
}

.detail.card .content::after {
    content: '';
    position: absolute;
    top: -50rpx;
    left: -56rpx;
    width: 10rpx;
    height: 400rpx;
    background: #3cb3f5;
}

.detail.card .content {
    width: 70%;
}

.detail.card .content .company, .detail.card .content .desc {
    font-size: 28rpx;
}

.detail.card .content .name {
    font-size: 44rpx;
    color: #616161;
    margin-top: 40rpx;
}

.detail.card .content .company,.detail.card .content .job,.detail.card .content .contact {
    font-size: 24rpx;
    line-height: 36rpx;
}

.detail.card .content .job {
    color: #616161;
    margin: 0rpx 0rpx 28rpx 0rpx;
}

.detail.card .content .desc {
    color: #3cb3f5;
    margin-top: 10rpx;
}

.detail.card .user-img {
    width: 30%;
}

.detail.card .user-img image {
    width: 120rpx;
    height: 120rpx;
    display: block;
}






