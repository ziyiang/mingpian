<import src="../../../templates/copyright/copyright.wxml"></import>
<import src="../../../templates/auth/auth.wxml"></import>
<view class="product-detail-swiper-sec rel">
    <swiper autoplay="{{swiperStatus.autoplay}}" bindchange="swiperChange" duration="1000" indicatorDots="{{swiperStatus.indicatorDots}}" interval="3000">
        <swiper-item wx:for="{{detailData.images_true}}" wx:key="key">
            <image bindtap="toJump" class="slide-image" data-status="toDetailJumpUrl" data-url="{{detailData.image_url}}" mode="aspectFill" src="{{item}}"></image>
        </swiper-item>
    </swiper>
    <view class="abs tc">{{swiperIndexCur}}/{{detailData.images_true.length}}</view>
</view>
<view class="product-detail-info-sec">
    <view class="title">{{detailData.name}}</view>
    <view class="detail-collage-price-count rel" wx:if="{{detailData.collage.length>1}}">
        <view class="detail-collage-price flex" style="padding:0rpx;">
            <view class="flex100-5">
                <text>¥<text>{{detailData.collage[rulesIndex].price==0?'面议':detailData.collage[rulesIndex].price}}</text>
                </text>
                <em>¥{{detailData.price==0?'面议':detailData.price}}</em>
            </view>
            <view class="flex100-5 ellipsis tr rel">
          浏览 : {{detailData.view_count}} 已拼:{{detailData.collage_count}}单
        </view>
        </view>
        <view class="detail-collage-count">
            <em class="br-5 mr-15">{{detailData.collage[rulesIndex].people}}人拼团</em>
            <em class="br-5 mr-15">{{detailData.collage[rulesIndex].titles}}</em>
            <em class="br-5 mr-15">每人{{detailData.collage[rulesIndex].number}}件起</em>
            <em class="br-5 mr-15" wx:if="{{detailData.collage_count>0}}">
        已拼:{{detailData.collage_count}}单
      </em>
        </view>
    </view>
    <view class="flex" wx:else>
        <view class="flex100-5 ellipsis">
            <text wx:if="{{detailData.is_collage==0}}">¥<text>{{detailData.price==0?'面议':detailData.price}}</text>
            </text>
            <text wx:if="{{detailData.is_collage==1}}">¥<text>{{addPrice==0?'面议':addPrice}}</text>
            </text>
        </view>
        <view class="flex100-5 ellipsis tr rel">
      浏览 : {{detailData.view_count}}
      　已售 : {{detailData.sale_count}}件
    </view>
    </view>
</view>
<view class="collage-detail-more" wx:if="{{collageList.length>0}}">
    <view class="content flex">
        <view class="flex100-7 ellipsis">此商品有{{collageList.length}}人正在拼单，可直接参与</view>
        <view bindtap="toJump" class="flex100-3 ellipsis tr" data-status="moreCollage" data-url="/longbing_card/pages/shop/moreCollage/moreCollage?id={{paramData.detailID}}&to_uid={{paramData.to_uid}}">
      查看更多
      <i class="iconfont icon-right"></i>
        </view>
    </view>
    <view class="more-launch-collage-list">
        <view bindtap="toJump" class="flex" data-index="{{index}}" data-method="" data-status="toReleaseCollage" data-url="/longbing_card/pages/shop/releaseCollage/releaseCollage?id={{paramData.detailID}}&collage_id={{item.id}}&to_uid={{paramData.to_uid}}&status=toPay" wx:if="{{index<4}}" wx:for="{{collageList}}" wx:key="key">
            <view class="flex100-5 rel ellipsis tl">
                <image class="circle abs" src="{{item.avatarUrl?item.avatarUrl:globalData.defaultUserImg}}"></image>
                <view class="ellipsis">
                    <text>{{item.titles}}-{{item.number}}件</text>
            起拼
          </view>
            </view>
            <view class="flex100-5 rel ellipsis tr">
                <view class="mt-6 ellipsis">
            还差
            <text class="c-fc3c3b">{{item.left_number}}人</text>
            拼团
          </view>
                <view class="time ellipsis">剩余{{tmpTimes[index]}}</view>
                <view class="more-collage-btn abs tc br-5">去拼单</view>
            </view>
        </view>
    </view>
</view>
<view class="product-hot-sec" style="margin:0rpx;">
    <view class="nav tc" style="border-bottom: 1rpx solid #ececec;">商品描述</view>
    <view class="product-detail-img">
        <htmltowxml bindWxmlTagATap="wxmlTagATap" json="{{detailData.content}}" showLoading="{{false}}"></htmltowxml>
    </view>
</view>
<template is="auth" data="{{authStatus:authStatus,globalData:globalData}}"></template>
<template is="copyright" data="{{globalData:globalData}}"></template>
<view class="product-detail-fixed-bottom tc flex fix {{globalData.isIphoneX?'isIphoneX':''}}">
    <view class="flex100-3 flex" style="flex:0 0 {{detailData.price>0?'35':'30'}}%;">
        <view bindtap="toJump" class="flex100-5" data-status="toShop" style="flex:0 0 {{detailData.price!=0?'50':'100'}}%;">
            <view class="icon">
                <i class="iconfont icon-jifenshangcheng"></i>
            </view>
            <view>商城首页</view>
        </view>
        <block wx:if="{{detailData.price!=0}}">
            <view bindtap="toJump" class="flex100-5" data-status="toConsult" wx:if="{{globalData.hasClientPhone==true}}">
                <view class="icon">
                    <i class="iconfont icon-kefu"></i>
                </view>
                <view>客服</view>
            </view>
            <button bindgetphonenumber="getPhoneNumber" class="flex100-5" openType="getPhoneNumber" wx:if="{{globalData.hasClientPhone==false}}">
                <view class="icon" style="margin-top:9rpx;">
                    <i class="iconfont icon-kefu"></i>
                </view>
                <view>客服</view>
            </button>
        </block>
    </view>
    <view class="flex100-7 flex {{detailData.is_collage=='1'?'collage-detail-btn':''}}" style="flex:0 0 70%;" wx:if="{{detailData.price==0}}">
        <view bindtap="toJump" class="flex100-5 bg-e02e24" data-status="toConsult" style="flex: 0 0 100%;line-height:95rpx;" wx:if="{{globalData.hasClientPhone==true}}">
        去咨询
      </view>
        <button bindgetphonenumber="getPhoneNumber" class="flex100-5 bg-e02e24" openType="getPhoneNumber" style="flex: 0 0 100%;line-height:95rpx;" wx:if="{{globalData.hasClientPhone==false}}">
        去咨询
      </button>
    </view>
    <view class="flex100-7 flex {{detailData.is_collage==1?'collage-detail-btn':''}}" style="flex:0 0 65%;" wx:if="{{detailData.price!=0}}">
        <block wx:if="{{detailData.is_collage==0}}">
            <view bindtap="toJump" class="flex100-5 bg-ffb400" data-status="toAddCar" style="line-height:95rpx;">
        加入购物车
      </view>
            <view bindtap="toJump" class="flex100-5 bg-e02e24" data-status="toProductPay" style="line-height:95rpx;">
        立即购买
      </view>
        </block>
        <block wx:if="{{detailData.is_collage==1}}">
            <view bindtap="toJump" class="flex100-5 bg-ffb400" data-status="toOnlyPay" style="{{detailData.collage.length>0?'':'flex: 0 0 100%'}}">
                <view class="money ellipsis" style="padding-top:3rpx;">¥{{addPrice}}</view>
                <view>单独购买</view>
            </view>
            <view bindtap="toJump" class="flex100-5 bg-e02e24" data-status="toCollagePay" wx:if="{{detailData.collage.length>0}}">
                <view class="money ellipsis" style="padding-top:3rpx;">¥{{detailData.collage[rulesIndex].price}}</view>
                <view>发起拼团</view>
            </view>
        </block>
    </view>
</view>
<view bindtap="toHideChoose" class="bg_opacity_sec fix {{bgStatus?'':'hide'}} {{chooseNumStatus?'choose-animatoinsA':'choose-animatoinsB'}}"></view>
<view class="choose-product-sec fix {{globalData.isIphoneX?'isIphoneX':''}} {{chooseNumStatus?'choose-animatoinsA':'choose-animatoinsB'}}">
    <view class="choose-info rel">
        <image class="abs br-5" src="{{detailData.cover_true}}"></image>
        <view class="content">
            <view class="c-fc3c3b">
        ￥{{toOrderStatus=='toCollagePay'?collageAddPrice:addPrice}}
        <em bindtap="toHideChoose" class="abs br-5 tc">
                    <i class="iconfont icon-guanbi1"></i>
                </em>
            </view>
            <view>库存：{{detailData.stock}}件</view>
        </view>
    </view>
    <view class="choose-overflow">
        <view class="pay-rules" wx:if="{{toOrderStatus=='toCollagePay'}}">
            <view class="title">拼团规格</view>
            <view class="rules">
                <view bindtap="toJump" class="choose-list flex tl {{index==rulesIndex?'active':''}}" data-index="{{index}}" data-status="setrules" wx:for="{{detailData.collage}}" wx:key="key">
                    <view class="flex100-25 ellipsis">{{item.people}}人拼团</view>
                    <view class="flex100-5 ellispsis">{{item.titles}}，每人{{item.number}}件起</view>
                    <view class="flex100-25 tr">
              选择此条件
              <i class="iconfont icon-right"></i>
                    </view>
                </view>
            </view>
        </view>
        <block wx:else>
            <view class="pay-rules" wx:for="{{detailData.spe_list}}" wx:key="key">
                <view class="title">{{item.title}}</view>
                <view class="spec-sec">
                    <view bindtap="toJump" class="fl br-5 {{checkSpeList[index]==index1?'active':''}} " data-id="{{item1.id}}" data-index="{{index}}" data-index1="{{index1}}" data-status="toCheckCur" wx:for="{{item.sec}}" wx:for-index="index1" wx:for-item="item1" wx:key="key1">
                {{item1.title}}
              </view>
                </view>
            </view>
        </block>
    </view>
    <view class="choose-num-btn flex">
        <view class="flex100-3">数量</view>
        <view class="flex100-7 tr">
            <view class="count-btn-sec">
                <i bindtap="RemoveAddNum" class="iconfont icon-jian" data-status="remove"></i>
                <text>{{addNumber}}</text>
                <i bindtap="RemoveAddNum" class="iconfont icon-jia" data-status="add"></i>
            </view>
        </view>
    </view>
    <view class="count-money tr">合计:{{countPrice}}元</view>
    <block wx:if="{{toOrderStatus=='toOnlyPay'}}">
        <view bindtap="toJump" class="choose-fixed-bottom fix tc bg-ffb400 {{globalData.isIphoneX?'isIphoneX':''}}" data-paystatus="toAddCar" data-status="toPay" style="width:50%;height:auto;">
      加入购物车
    </view>
        <view bindtap="toJump" class="choose-fixed-bottom fix tc bg-e02e24 {{globalData.isIphoneX?'isIphoneX':''}}" data-paystatus="toOnlyPay" data-status="toPay" style="width:50%;height:auto;left:50%;">
      立即购买
    </view>
    </block>
    <view bindtap="toJump" class="choose-fixed-bottom fix tc bg-e02e24 {{globalData.isIphoneX?'isIphoneX':''}}" data-status="toPay" style="height:auto;" wx:else>
      确定
    </view>
</view>
<form bindsubmit="formSubmit" class="fixed-right-sec fixed-shop-right-sec fix" reportSubmit="true">
    <button class="circle tc" data-status="toCarIndex" formType="submit" hoverClass="none">
        <i class="iconfont icon-gouwuche"></i>
    </button>
    <button class="circle tc" data-status="toMine" formType="submit" hoverClass="none">
        <i class="iconfont icon-yuangong"></i>
    </button>
    <button class="circle tc" data-status="toShowShare" formType="submit" hoverClass="none">
        <i class="iconfont icon-fenxiang"></i>
    </button>
</form>
<view bindtap="toJump" class="bg_opacity_sec fix {{showShareStatus==1?'':'hide'}}" data-status="toShareCard" data-type="3"></view>
<form bindsubmit="formSubmit" class="fix-show-share-sec tc fix  {{globalData.isIphoneX?'isIphoneX':''}} {{showShareStatus==1?'':'hide'}}" reportSubmit="true">
    <view class="flex">
        <button bindtap="toJump" class="flex100-5" data-status="toShareCard" data-type="1" openType="share">
            <i class="iconfont icon-weixin1"></i>
            <view class="title">微信好友</view>
        </button>
        <button class="flex100-5" data-status="toShareCard" data-type="2" formType="submit" hoverClass="none">
            <i class="iconfont icon-pengyouquan-copy"></i>
            <view class="title">商品码</view>
        </button>
    </view>
    <button class="cancel" data-status="toShareCard" data-type="3" formType="submit" hoverClass="none">
    取消
  </button>
</form>
<view class="{{globalData.isIphoneX?'isIphoneX':''}}" style="height:100rpx;"></view>
