<view class="navList-search-sec fix">
    <view bindtap="toJump" class="tc" data-status="toSearch" data-url="/longbing_card/pages/shop/search/search">
        <i class="iconfont icon-sousuo"></i>搜索商品</view>
</view>
<view class="scroll-view-fix fix">
    <scroll-view class="scroll-view-navLeft-sec abs clearfix" scrollIntoView="{{toLeftView}}" scrollWithAnimation="true" scrollY="true">
        <view bindtap="toJump" class="child ellipsis rel {{index==activeIndex?'active':''}}" data-categoryid="{{item.id}}" data-index="{{index}}" data-status="toTabClick" id="scrollLeft{{item.id}}" wx:for="{{shop_type}}" wx:key="index">
            <view class="title {{index==activeIndex?'active':''}}">{{item.title}}</view>
            <view class="split abs"></view>
        </view>
    </scroll-view>
    <scroll-view class="scroll-view-navRight-sec-view abs" scrollIntoView="{{toRightView}}" scrollWithAnimation="true" scrollY="true">
        <view bindtap="toTabClickJump" class="child rel" data-categoryid="{{item.id}}" data-index="{{index}}" data-status="toTabClick" id="scrollRight{{item.id}}" wx:for="{{shop_type}}" wx:key="index">
            <view class="flex" style="padding-right:250rpx;">
                <view class="flex100-5">{{item.title}}</view>
                <view bindtap="toJump" class="flex100-5 tr" data-index="{{index}}" data-status="toMore" data-url="/longbing_card/pages/shop/list/list?id={{item.id}}&all_categoryid={{item.id}}&status=all">查看全部<i class="iconfont icon-right"></i>
                </view>
            </view>
            <view class="child-img-text clearfix" style="padding-right:250rpx;">
                <view bindtap="toJump" class="child tc" data-index="{{index1}}" data-status="toNavProduct" data-url="/longbing_card/pages/shop/detail/detail?id={{item1.id}}&to_uid={{globalData.to_uid}}" wx:for="{{item.goods}}" wx:for-index="index1" wx:for-item="item1" wx:key="index1">
                    <image class="br-10" mode="aspectFill" src="{{item1.cover_true}}"></image>
                    <view class="text ellipsis">{{item1.name}}</view>
                </view>
                <view bindtap="toJump" class="child tc" data-index="{{index}}" data-status="toNavProduct" data-url="/longbing_card/pages/shop/list/list?id={{item1.id}}&all_categoryid={{item.id}}&status=nav" wx:for="{{item.sec}}" wx:for-index="index1" wx:for-item="item1" wx:key="index1">
                    <image class="br-10" mode="aspectFill" src="{{item1.cover_true}}"></image>
                    <view class="text ellipsis">{{item1.title}}</view>
                </view>
            </view>
        </view>
    </scroll-view>
</view>
<view class="{{globalData.isIphoneX?'isIphoneX':''}}"></view>
